@model IT_Project_manager.Models.Manager

@{
    ViewData["Title"] = "Details";
}



<div>
    <h1> Details for @Model.Name @Model.Surname</h1>
    <h3 class="text-muted">Manager</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname):
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone)
        </dd>
        
    </dl>

    <hr />
</div>
<div>
    <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-outline-primary btn-sm" asp-action="Index">Back to List</a>
    <a class="btn btn-outline-primary btn-sm" asp-controller="Members" asp-action="Index">Back to members</a>
</div>
