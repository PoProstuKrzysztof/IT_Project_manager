@model IEnumerable<IT_Project_manager.Models.Manager>

@{
    ViewData["Title"] = "Managers";
}




<body>
    <h1 id="indexTitle">Managers</h1>
    <a style="margin: 10px" class="btn btn-outline-primary" asp-action="Create">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <b>@Html.DisplayNameFor(model => model.Name)</b>
                </th>
                <th>
                    <b>@Html.DisplayNameFor(model => model.Surname)</b>
                </th>
                <th>
                    <b>@Html.DisplayNameFor(model => model.Telephone)</b>
                </th>
                <th>
                    <b>Operations</b> 
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="tableData">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                        <br>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                        <br>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                        <br>
                    </td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-outline-warning btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
