@using Microsoft.AspNetCore.Identity;
@using IT_Project_manager.CustomTagHelpers;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>All roles</h1>
<a asp-action="Create" class="btn btn-secondary">Create a Role</a>


<table class="table table-sm table-bordered shadow">
    <tr>
        <th>ID</th>
        <th>Name</th>       
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            
            <td><a class="btn btn-primary " asp-action="Update" asp-route-id="@role.Id">Update</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>